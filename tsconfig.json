{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "lib": ["es2018", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests", "examples"]
  }